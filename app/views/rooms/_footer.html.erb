<footer class="fixed-bottom message-footer">
  <%= form_with model: [@room, @message], local: false do |f| %>
    <div class="form-group">
      <%= hidden_field_tag :id, @room.id %>
      <!-- ここは自動的に message_content というidが付く。アンダーバーであることに注意！ -->
      <%= f.text_area :content, class: 'form-control', rows: '1', maxlength: '500' %>
    </div>

    <div class="form-group">
      <%= f.submit '送信', class: 'btn btn-primary btn-block disabled', id: 'message-button' %>
    </div>
  <% end %>
</footer>