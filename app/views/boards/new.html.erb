<% provide(:title, '掲示板の追加') %>
<h1>掲示板の追加</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with(model: @board, local: true) do |f| %>
      <%= f.label :number, 'ナンバーを入力する　ex.③'%>
      <%= f.text_field :number %>
      
      <%= f.label :whatvswhat, '何対何　ex.2対2'%>
      <%= f.text_field :whatvswhat %>

　　　<%= f.submit "掲示板の追加", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>